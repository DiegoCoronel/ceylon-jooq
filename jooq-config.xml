<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmxmlns="http://www.jooq.org/xsd/jooq-codegen-3.8.0.xsd">
	<!-- Configure the database connection here -->
	<jdbc>
		<driver>org.postgresql.Driver</driver>
		<url>jdbc:postgresql://localhost:5432/jooq</url>
		<user>jooq</user>
		<password>jooq</password>
	</jdbc>
	<generator>
		<name>org.jooq.util.DefaultGenerator</name>
		<database>
			<name>org.jooq.util.postgres.PostgresDatabase</name>
			<includes>.*</includes>
			<inputSchema>public</inputSchema>

			<customTypes>
				<customType>
					<name>CString</name>
					<type>ceylon.language.String</type>
					<converter>jooq_metadata.converter.CeylonStringConverter</converter>
				</customType>
			</customTypes>

			<forcedTypes>
				 <forcedType>
			       <name>CString</name>
			       <types>character.*</types>
			    </forcedType>
			</forcedTypes>
			
		</database>

		<strategy>
			<name>jooq.ceylon.util.CamelCaseStrategy</name>
		</strategy>

		<generate>
			<pojos>false</pojos>
			<daos>false</daos>
		</generate>

		<target>
			<packageName>jooq_metadata.gen</packageName>
			<directory>./source</directory>
		</target>
	</generator>
</configuration>